@model MomentApp.Models.RoomCreatedViewModel
@{
    ViewData["Title"] = "Room Created!";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-blue-50 flex items-center justify-center px-4 py-12">
    <div class="max-w-3xl w-full">
        <div class="bg-white rounded-lg shadow-xl p-8">
            <!-- Success Header -->
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">‚ú®</div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Room Created!</h1>
                <p class="text-gray-600">Share this code to invite others</p>
            </div>

            <!-- Room Code Display -->
            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg p-8 mb-8 text-center">
                <p class="text-white text-sm font-semibold mb-2">Room Code</p>
                <div class="text-5xl font-bold text-white tracking-widest mb-4" id="roomCode">@Model.RoomCode</div>
                @if (!string.IsNullOrEmpty(Model.RoomName))
                {
                    <p class="text-indigo-100 text-lg">@Model.RoomName</p>
                }
            </div>

            <!-- QR Code -->
            @if (!string.IsNullOrEmpty(Model.QRCodeDataUrl))
            {
                <div class="text-center mb-8">
                    <p class="text-gray-700 font-semibold mb-4">Scan to Join</p>
                    <img src="@Model.QRCodeDataUrl" alt="QR Code" class="mx-auto max-w-xs border-4 border-gray-200 rounded-lg shadow-md" />
                </div>
            }

            <!-- Share Options -->
            <div class="space-y-4 mb-8">
                <p class="text-gray-700 font-semibold text-center mb-4">Share this link:</p>
                
                <div class="flex gap-2">
                    <input type="text" 
                           id="shareLink" 
                           value="@Model.ShareableLink" 
                           readonly 
                           class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-lg bg-gray-50" />
                    <button onclick="copyLink()" 
                            class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-3 rounded-lg transition">
                        Copy
                    </button>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <a href="https://wa.me/?text=Join my chat room on Moment: @Model.ShareableLink" 
                       target="_blank"
                       class="flex items-center justify-center gap-2 bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-4 rounded-lg transition">
                        <span>üì±</span>
                        WhatsApp
                    </a>
                    <a href="mailto:?subject=Join my Moment chat&body=Join my chat room: @Model.ShareableLink" 
                       class="flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition">
                        <span>üìß</span>
                        Email
                    </a>
                </div>
            </div>

            <!-- Room Info -->
            <div class="bg-yellow-50 border-2 border-yellow-200 rounded-lg p-4 mb-8">
                <div class="flex items-start gap-3">
                    <span class="text-2xl">‚è±Ô∏è</span>
                    <div>
                        <p class="font-semibold text-gray-900">Room expires at:</p>
                        <p class="text-gray-700">@Model.ExpiresAt.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                        <p class="text-gray-600 text-sm mt-1">All messages will be permanently deleted after this time</p>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="@Url.Action("Index", "Room", new { roomCode = Model.RoomCode })" 
                   class="flex-1 text-center bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-4 px-8 rounded-lg shadow-lg transition">
                    Enter Room
                </a>
                <a href="@Url.Action("Index", "Home")" 
                   class="flex-1 text-center bg-white hover:bg-gray-50 text-indigo-600 font-semibold py-4 px-8 rounded-lg shadow-lg border-2 border-indigo-600 transition">
                    Create Another
                </a>
            </div>
        </div>
    </div>
</div>

<div id="copyNotification" class="fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg hidden">
    ‚úì Link copied to clipboard!
</div>

<script>
    function copyLink() {
        const linkInput = document.getElementById('shareLink');
        linkInput.select();
        linkInput.setSelectionRange(0, 99999); // For mobile devices
        
        navigator.clipboard.writeText(linkInput.value).then(() => {
            // Show notification
            const notification = document.getElementById('copyNotification');
            notification.classList.remove('hidden');
            setTimeout(() => {
                notification.classList.add('hidden');
            }, 3000);
        }).catch(err => {
            alert('Failed to copy link');
        });
    }
</script>

