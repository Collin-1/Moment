@model MomentApp.Models.SelectDisplayViewModel
@{
    ViewData["Title"] = "Choose Your Display";
    var availableColors = ViewBag.AvailableColors as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-pink-50 flex items-center justify-center px-4 py-12">
    <div class="max-w-2xl w-full">
        <div class="bg-white rounded-lg shadow-xl p-8">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Choose Your Display</h1>
                <p class="text-gray-600">Pick a name and color to represent you in the chat</p>
            </div>

            <!-- Form -->
            <form asp-action="SelectDisplay" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RoomCode" />
                
                <!-- Display Name -->
                <div>
                    <label asp-for="DisplayName" class="block text-sm font-semibold text-gray-700 mb-2">
                        Display Name
                    </label>
                    <input asp-for="DisplayName" 
                           type="text" 
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none"
                           placeholder="e.g., Alex, Jordan, Sam" />
                    <span asp-validation-for="DisplayName" class="text-red-500 text-sm block mt-1"></span>
                    <p class="text-gray-500 text-sm mt-1">Choose a unique name that others will see</p>
                </div>

                <!-- Color Selection -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-3">
                        Your Color
                    </label>
                    <div class="grid grid-cols-3 sm:grid-cols-4 gap-3">
                        @foreach (var color in availableColors)
                        {
                            var isChecked = color.Value == Model.ColorHex;
                            <label class="relative cursor-pointer">
                                <input type="radio" 
                                       asp-for="ColorHex" 
                                       value="@color.Value" 
                                       class="sr-only peer"
                                       checked="@isChecked" />
                                <div class="w-full aspect-square rounded-lg border-4 border-transparent peer-checked:border-gray-900 peer-checked:shadow-lg transition-all hover:scale-110"
                                     style="background-color: @color.Value;">
                                </div>
                                <p class="text-center text-sm font-medium text-gray-700 mt-1">@color.Key</p>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="ColorHex" class="text-red-500 text-sm block mt-2"></span>
                </div>

                <!-- Preview -->
                <div class="bg-gray-50 border-2 border-gray-200 rounded-lg p-4">
                    <p class="text-sm font-semibold text-gray-700 mb-2">Preview:</p>
                    <div class="flex items-center gap-3">
                        <div id="previewColor" class="w-8 h-8 rounded-full" style="background-color: @Model.ColorHex;"></div>
                        <span id="previewName" class="font-semibold text-gray-900">@(string.IsNullOrWhiteSpace(Model.DisplayName) ? "Your Name" : Model.DisplayName)</span>
                    </div>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="bg-red-50 border-2 border-red-200 rounded-lg p-4 text-red-700 text-sm"></div>

                <!-- Submit Button -->
                <button type="submit" 
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-4 px-8 rounded-lg shadow-lg transform transition hover:scale-105">
                    Join Room
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Update preview when name changes
        document.querySelector('input[name="DisplayName"]').addEventListener('input', function(e) {
            const previewName = document.getElementById('previewName');
            previewName.textContent = e.target.value || 'Your Name';
        });

        // Update preview when color changes
        document.querySelectorAll('input[name="ColorHex"]').forEach(radio => {
            radio.addEventListener('change', function(e) {
                const previewColor = document.getElementById('previewColor');
                previewColor.style.backgroundColor = e.target.value;
            });
        });
    </script>
}

